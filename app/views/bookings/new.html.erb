<h1> Booking </h1>

<div>

 <div>
   <h3>Your flight information</h3>
   <fieldset>
     <legend>Flight Details </legend>
   <table>
     <tr>
       <th>Flight ID</th>
       <th>From Airport </th>
       <th>Destination</th>
       <th>Departure Date</th>
     </tr>
     <tr>
       <td><%= @flight.id  %></td>
       <td><%= @flight.from_airport.name %></td>
       <td><%= @flight.to_airport.name %></td>
       <td><%= @flight.departure.to_formatted_s(:long_ordinal) %></td>
    </tr>
   </table>
   </fieldset>
  </div><br />


  <h3>Add passenger information</h3>
  <div>
  <%= simple_form_for @bookings, method: "POST" do |f| %>
  <fieldset>
    <legend> Enter passenger information </legend>
  <ul>
    <%= f.simple_fields_for :passengers do |form| %>
    <li>
      <%= form.input :name, placeholder: "name" %>
      <%= form.input :email, placeholder: "Passenger active email please" %>
    </li>
    <% end %>
    </ul>

    <%= f.hidden_field :flight_id, value: @flight_id %>
    <%= f.submit "Add passenger" %>
  <% end %>
  </fieldset>
  </div>

</div>
